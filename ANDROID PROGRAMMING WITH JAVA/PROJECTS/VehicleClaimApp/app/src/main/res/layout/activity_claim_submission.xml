<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.claim.ClaimSubmissionActivity">

        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/etClaimDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter claim description"
            android:inputType="text" />

        <Button
            android:id="@+id/btnSubmitClaim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Claim" />

                <Button
                    android:id="@+id/btnUpdateClaim"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Claim" />

        <Button
            android:id="@+id/btnViewClaimHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Claim History" />

        <ListView
            android:id="@+id/lvClaimHistory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>